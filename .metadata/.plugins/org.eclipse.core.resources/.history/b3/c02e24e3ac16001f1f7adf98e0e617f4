package zadatak1;

public class AnalizatorSlovaUTesktu {
String tekst="nepoznat";

public String getTekst() {
	return tekst;
}

public void setTekst(String tekst) {
	this.tekst = tekst;
}

int duzinaTeksta() {
	return tekst.length();
}

int pojavljivanjeMalogA() {
	int brojac=0;
	for (int i = 0; i < tekst.length(); i++) {
		if(tekst.charAt(i)=='a') {
			brojac++;
		}
	}
	return brojac;
}
}
